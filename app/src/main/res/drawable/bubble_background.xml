<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#F0FFF0" /> <!-- Bubble background color -->
    <corners android:radius="16dp" /> <!-- Rounded corners -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Optional border -->
    <padding
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp"
        android:top="8dp" /> <!-- Padding inside the bubble -->
</shape>
