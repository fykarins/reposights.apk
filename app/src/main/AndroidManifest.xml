<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bg_logo"
        android:roundIcon="@drawable/bg_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.IPBgpt"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name="com.example.myapplication.ui.feature.main.MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            tools:ignore="RedundantLabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.feature.main.SplashActivity"
            android:exported="true" />

        <activity
            android:name="com.example.myapplication.ui.feature.user.LoginActivity"
            android:exported="true" />

        <activity
            android:name="com.example.myapplication.ui.feature.user.SignupActivity"
            android:exported="false" />

        <activity
            android:name="com.example.myapplication.ui.feature.home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.feature.history.HistoryActivity" />

    </application>
</manifest>